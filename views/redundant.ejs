      </div>
    </div>

    <div class="col s6">
      <div class="col s12">
        <h5>Personal</h5>
      </div>
        <div class="col s12">
          <div class="col s6">
            <form action="/users/<%= user.id%>/student" method="post">
              <input type="text" placeholder="name" name="name">
              <input type="text" placeholder="last_name" name="last_name">
              <input type="text" placeholder="country" name="country">
              <input type="text" placeholder="city" name="city">
              <input type="submit" value="Add">
            </form>
          </div>
        </div>
      </div>
      <div class="col s12">
        <% if(student) {%>
        <% for(var i =0; i < student.length; i++){ %>
          <p><%= student[i].name%></p>
          <p><%= student[i].last_name%></p>
        <%  } %>
        <% } %>
      </div>

      <div class="col s6">
        <div class="col s12">
          <h5>Personal Statement</h5>
          <div class="col s12">
            <div class="col s6">
              <form action="/users/<%= user.id%>" method="post">
                <input type="text" placeholder="title" name="title">
                <input type="text" name="post" placeholder="post">
                <input type="submit" value="Add">
              </form>
            </div>
          </div>
        </div>
        <% if (statement) { %>
        <% for(var i =0; i < statement.length; i++) { %>
          <div class="row">
            <div class="col s12 m6">
              <div class="card light-grey darken-1">
                <div class="card-content black-text">
                  <span class="card-title"><%= statement[i].title %></span>
                  <p>
                    <%= statement[i].post %>
                  </p>
                </div>
              </div>
            </div>
          </div>
          <% } %>
          <% } %>

